<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

        <Switch
            android:id="@+id/btZoom"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Posicionar"
            android:layout_gravity="right" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <br.projeto.democanvasandroid.controller.TelaView
                android:id="@+id/telaView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:img_drawable="@drawable/rayx"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <com.vi.swipenumberpicker.SwipeNumberPicker
                android:id="@+id/valorMili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                app:snp_numberColor="@android:color/white"
                app:snp_arrowColor="@android:color/white"
                app:snp_backgroundColor="@color/colorPrimaryDark"
                app:snp_max="20"
                app:snp_min="0"
                app:snp_value="10"/>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4">

            <Button
                android:id="@+id/btSalva"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Save" />
    </LinearLayout>

</LinearLayout>
